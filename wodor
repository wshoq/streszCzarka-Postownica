  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Artykuły o Wodorze</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f4f4f4;
      margin: 2rem;
    }
    h1 {
      text-align: center;
      color: #006494;
    }
    .article {
      background: #fff;
      border-radius: 10px;
      box-shadow: 0 2px 6px rgba(0,0,0,0.1);
      padding: 20px;
      margin-bottom: 20px;
    }
    .article h2 {
      margin-top: 0;
      color: #003554;
    }
    .article p {
      line-height: 1.6;
    }
  </style>
  <script src="https://cdn.jsdelivr.net/npm/@supabase/supabase-js@2"></script>
</head>
<body>

  <h1>Artykuły o Wodorze</h1>
  <div id="articles"></div>

  <script>
    const SUPABASE_URL = "https://uybpjjqvtcpsxihpbhlp.supabase.co";
    const SUPABASE_KEY = "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6InV5YnBqanF2dGNwc3hpaHBiaGxwIiwicm9sZSI6ImFub24iLCJpYXQiOjE3NTA0MzMxOTksImV4cCI6MjA2NjAwOTE5OX0.t2amEymFNyEr7bEZ4_p5qX5zxdpx60m3vlyyj2uZkdc";
    const supabase = window.supabase.createClient(SUPABASE_URL, SUPABASE_KEY);

    async function loadArticles() {
      const { data, error } = await supabase
        .from("Wodor")
        .select("*")
        .order("created_at", { ascending: false });

      const container = document.getElementById("articles");

      if (error) {
        container.innerHTML = `<p style="color:red;">Błąd pobierania danych: ${error.message}</p>`;
        return;
      }

      if (!data || data.length === 0) {
        container.innerHTML = "<p>Brak artykułów do wyświetlenia.</p>";
        return;
      }

      data.forEach(article => {
        const articleEl = document.createElement("div");
        articleEl.className = "article";
        articleEl.innerHTML = `
          <h2>${article.title || "Bez tytułu"}</h2>
          <p>${(article.content || "").replace(/\n/g, "<br>")}</p>
        `;
        container.appendChild(articleEl);
      });
    }

    loadArticles();
  </script>

</body>
</html>
